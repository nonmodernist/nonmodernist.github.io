{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "blogpost",
      "previewPath": null,
      "pageBundle": false,
      "clearEmpty": true,
      "fields": [
        {
          "title": "Title",
          "name": "title",
          "type": "string"
        },
        {
          "title": "Publishing date",
          "name": "date",
          "type": "datetime",
          "default": "{{now}}",
          "isPublishDate": true
        },
        {
          "title": "Updated date",
          "name": "updated",
          "type": "datetime",
          "isModifiedDate": true
        },
        {
          "title": "Article preview",
          "name": "preview",
          "type": "image"
        },
        {
          "title": "Is in draft",
          "name": "draft",
          "type": "draft"
        },
        {
          "title": "fmContentType",
          "name": "fmContentType",
          "type": "string"
        },
        {
          "title": "taxonomies",
          "name": "taxonomies",
          "type": "fields",
          "fields": [
            {
              "title": "tags",
              "name": "tags",
              "type": "tags"
            }
          ]
        },
        {
          "title": "extra",
          "name": "extra",
          "type": "fields",
          "fields": [
            {
              "title": "tldr",
              "name": "tldr",
              "type": "string"
            }
          ]
        }
      ]
    }
  ],
  "frontMatter.framework.id": "zola",
  "frontMatter.content.publicFolder": "static",
  "frontMatter.preview.host": "http://127.0.0.1:1111",
  "frontMatter.content.pageFolders": [
    {
      "title": "content",
      "path": "[[workspace]]/content"
    },
    {
      "title": "teaching",
      "path": "[[workspace]]/content/teaching"
    },
    {
      "title": "notes",
      "path": "[[workspace]]/content/notes",
      "contentTypes": [
        "blogpost"
      ]
    },
    {
      "title": "research",
      "path": "[[workspace]]/content/research"
    },
    {
      "title": "log",
      "path": "[[workspace]]/content/log"
    }
  ],
  "frontMatter.git.enabled": true,
  "frontMatter.framework.startCommand": "zola serve --drafts",
  "frontMatter.content.snippets": {
    "Callouts": {
      "description": "callout shortcode in zola/apollo",
      "body": [
        "{{ note(clickable=true, hidden = true, header=\"TEXT\", body=\"TEXT\") }}",
        ""
      ],
      "fields": []
    }
  }
}