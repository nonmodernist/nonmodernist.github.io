{
  "$schema": "https://frontmatter.codes/frontmatter.schema.json",
  "frontMatter.taxonomy.contentTypes": [
    {
      "name": "default",
      "pageBundle": false,
      "previewPath": null,
      "fields": [
        {
          "title": "Title",
          "name": "title",
          "type": "string"
        },
        {
          "title": "Description",
          "name": "description",
          "type": "string"
        },
        {
          "title": "Publishing date",
          "name": "date",
          "type": "datetime",
          "default": "{{now}}",
          "isPublishDate": true
        },
        {
          "title": "Content preview",
          "name": "preview",
          "type": "image"
        },
        {
          "title": "Is in draft",
          "name": "draft",
          "type": "draft"
        },
        {
          "title": "taxonomies",
          "name": "taxonomies",
          "type": "fields",
          "fields": [
            {
              "title": "tags",
              "name": "tags",
              "type": "tags"
            }
          ]
        },
        {
          "title": "extra",
          "name": "extra",
          "type": "fields",
          "fields": [
            {
              "title": "moon_phase",
              "name": "moon_phase",
              "type": "string"
            },
            {
              "title": "tldr",
              "name": "tldr",
              "type": "string"
            },
            {
              "title": "related_notes_links",
              "name": "related_notes_links",
              "type": "block",
              "fieldGroup": [
                "related_notes_links_group"
              ]
            }
          ]
        },
        {
          "title": "updated",
          "name": "updated",
          "type": "datetime"
        }
      ]
    }
  ],
  "frontMatter.framework.id": "hugo",
  "frontMatter.content.publicFolder": "static",
  "frontMatter.preview.host": "http://localhost:1313",
  "frontMatter.content.pageFolders": [
    {
      "title": "content",
      "path": "[[workspace]]/content"
    },
    {
      "title": "teaching",
      "path": "[[workspace]]/content/teaching"
    },
    {
      "title": "notes",
      "path": "[[workspace]]/content/notes",
      "contentTypes": [
        "blogpost"
      ]
    },
    {
      "title": "research",
      "path": "[[workspace]]/content/research"
    },
    {
      "title": "log",
      "path": "[[workspace]]/content/log"
    }
  ],
  "frontMatter.git.enabled": true,
  "frontMatter.framework.startCommand": "zola serve --drafts",
  "frontMatter.content.snippets": {
    "Callouts": {
      "description": "callout shortcode in zola/apollo",
      "body": [
        "{{ note(clickable=true, hidden = true, header=\"TEXT\", body=\"TEXT\") }}",
        ""
      ],
      "fields": []
    },
    "Image with Styling": {
  "description": "Insert an image with positioning options (center, float-left, float-right)",
  "body": [
    "<figure class=\"[[position]]\">",
    "  <div class=\"pixel-corners--wrapper\">",
    "    <img src=\"[[&mediaUrl]]\" alt=\"[[alt]]\" width=\"[[width]]px\">",
    "  </div>",
    "  <figcaption>[[caption]]</figcaption>",
    "</figure>"
  ],
  "fields": [
    {
      "name": "position",
      "title": "Image Position",
      "type": "choice",
      "choices": [
        "center",
        "float-left",
        "float-right"
      ],
      "default": "center"
    },
    {
      "name": "width",
      "title": "Image Width (in px)",
      "type": "string",
      "default": "200"
    },
    {
      "name": "caption",
      "title": "Image Caption",
      "type": "string",
      "default": ""
    },
    {
      "name": "alt",
      "title": "Alt Text (for accessibility)",
      "type": "string",
      "default": ""
    }
  ],
  "isMediaSnippet": true
}
  },

  
  "frontMatter.taxonomy.fieldGroups": [
    {
      "id": "related_notes_links_group",
      "fields": [
        {
          "title": "url",
          "name": "url",
          "type": "string"
        },
        {
          "title": "title",
          "name": "title",
          "type": "string"
        },
        {
          "title": "description",
          "name": "description",
          "type": "string"
        },
        {
          "title": "moon_phase",
          "name": "moon_phase",
          "type": "string"
        }
      ]
    }
  ]
}